<h1> Mixtapes! </h1>

<h2><%= link_to "Create new tape", new_tape_path %></h2>


<div class="row">
  <div class="col-md-4">
    Name
  </div>
  <div class="col-md-4">
    Songs
  </div>
  <div class="col-md-4">
    Destroy?
  </div>
</div>


  <% @tapes.each do |tape| %>
    <div class="row">
      <div class="col-md-4">
      <%= link_to tape.name, tape %>
      </div>
      <div class="col-md-4">
      <% tape.songs.each do |song| %>
        <ul>
          <li> <%= song.title %>, <%= song.artist %> </li>
        </ul>
      <% end %>
      </div>
    <div class="col-md-4">
      <%= link_to 'Destroy', tape, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
  <% end %>





