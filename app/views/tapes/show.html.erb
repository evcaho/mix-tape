<h2><%= @tape.name %></h2>
<h3> Songs: </h3>
  <% @tape.songs.each do |song| %>
    <ul>
      <li> <%= song.title %>, <%= song.artist %></li>
    </ul>
  <% end %>



<h2>Add a song:</h2>
<%= form_for @song do |f| %>
    <li>
       <%= f.label :title %>
      	<%= f.text_field :title %>

      	<%= f.label :artist %>
      	<%= f.text_field :artist %>

      	<%= f.hidden_field :tape_id, value: @tape.id %>
      	<%= f.submit %>
    </li>
<% end %>

