<h1> Songs </h1>

<table>
  <tr>
    <th>Songs</th>
    <th>Associations!</th>
  </tr>

  <% @songs.each do |song| %>
    <tr>
      <td><%= link_to song.title, song %>,<%= song.artist %></td>
      <td>
      	  <% song.tapes.each do |tape| %>
            <ul>
              <li> <%= link_to tape.name, tape %> </li>
            </ul>
          <% end %>
      </td>
      <td><%= link_to 'Destroy Song', song, method: :delete, data: { confirm: 'Are you sure you want to destroy this song?' } %> </td>
  	</tr>
<% end %>
</table>
